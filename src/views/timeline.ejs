<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="style.css" rel="stylesheet"> 
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined" rel="stylesheet" />
    <title>Timeline</title>
</head>
<body class="bSidebar d-flex align-items-center py-4 bg-body-tertiary">
    <div class="container">
        <div class="sidebar">
            <button class="sidebarButton active"> <span class="material-symbols-outlined">home</span> Home</button>
            <form action="/profile" method="get">
                <button class="sidebarButton"> <span class="material-symbols-outlined">person</span> Profile</button>                
            </form>
            <!-- bglh de pesquisar aqui -->
            <form action="/search" method="get">  
                <button class="sidebarButton"><span class="material-symbols-outlined">search</span> Search</button>
            </form>
            
             <form action="/chat" method="get">              
                 <button class="sidebarButton"><span class="material-symbols-outlined">Chat</span> Chat</button>
            </form>
            <form action="\login" method="get">
                <button class="sidebarButton"><span class="material-symbols-outlined">logout</span> Logout</button>
            </form>
        </div>

        <div class="feed">
            <div class="feed_header">
                <h2>Home</h2>
                <h5>Ol√°, <%= username %>!</h5>
            </div>
            <div class="feed_header">
                <h3>Thoughts:</h3>
            </div>  
            
            <% data.forEach(item => { %>
            <div class="postTimeline">
                <div class="postTlAvatar">
                    <img src="imgs/avatar.jpg" alt="">
                </div>
                <div class="post_body">
                    <div class="post_header">
                        <div class="post_headerText">
                            <h3><%= item.user_name %></h3>
                        </div>
                        <div class="postHeader_Description">
                            <p><%= item.content %></p>
                            <sup><%= new Date(item.created_at).toDateString() %></sup>
                        </div>
                    </div>
                </div>
            </div>
            <% }); %>
        </div>

        <div class="inputPost">
            <form action="/timeline" method="post" id="postForm">
                <img src="imgs/WhatsApp Image 2024-04-05 at 11.08.49.jpeg" alt="">
                <input type="text" class="form-control" id="content" name="content" placeholder="Whassup?" required>
                <button type="submit" class="postBox_post">Post</button>
            </form>
        </div>
    </div>
    <script src="./src/server.js"></script>
</body>
</html>
