<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="style.css" rel="stylesheet"> 
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined" rel="stylesheet" />
    <title>Timeline</title>
</head>
<body class="bSidebar d-flex align-items-center py-4 bg-body-tertiary">
    <div class="sidebar">
        <div class="sidebarOption active">
            <span class="material-symbols-outlined">home</span>
            <h3>Home</h3>
        </div>
        <div class="sidebarOption">
            <span class="material-symbols-outlined">search</span>
            <h3>Search</h3>
        </div>
        <div class="sidebarOption">
            <span class="material-symbols-outlined">person</span>
            <h3>Profile</h3>
        </div>
        <button class="sidebar_post">Post</button>
    </div>
   
    <div class="feed">
        <div class="feed_header">
            <h3>Home</h3>
        </div>
        <div class="postBox"> 
            <!--Post New Thought-->
            <div class="inputPost">
                <img src="imgs/WhatsApp Image 2024-04-05 at 11.08.49.jpeg" alt="">
                <input type="text" placeholder="Whassup?">
            </div>
            <button class="postBox_post">Post</button>
        </div>
        
        <% data.forEach(item => { %>
        <div class="postTimeline">
            <div class="postTlAvatar">
                <img src="imgs/avatar.jpg" alt="">
            </div>
            <div class="post_body">
                <div class="post_header">
                    <div class="post_headerText">
                        <h3><%= item.user_name %></h3>
                    </div>
                    <div class="postHeader_Description">
                        <p><%= item.content %></p>
                        <small><%= item.date %></small>
                    </div>
                </div>
            </div>
        </div>
        <% }); %>
    </div>
    <!-- <div class="widgets">
        <h3>nothing yet</h3>
    </div> -->
    <script src="./src/server.js"></script>
</body>
</html>
